{
  "typeCheckingMode": "standard",
  "executionEnvironments": [
    { "root": ".", "pythonVersion": "3.11" }
  ],
  "venvPath": ".",
  "venv": ".venv",
  "include": ["src", "tests"],
  "exclude": [
    "**/.venv",
    "**/venv",
    "**/env",
    "**/__pycache__",
    "**/site-packages/**",
    "build",
    "dist"
  ],
  "reportMissingTypeStubs": "warning",
  "ignore": ["**/.venv/**", "**/build/**"],
}

