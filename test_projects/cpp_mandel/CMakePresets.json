{
  "version": 5,

  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "dev",
      "displayName": "dev (Ninja, RelWithDebInfo)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/dev",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "ci-release",
      "displayName": "ci-release (Ninja, Release)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/ci-release",
      "cacheVariables": {
        "CMAKE_C_COMPILER_LAUNCHER": "sccache",
        "CMAKE_CXX_COMPILER_LAUNCHER": "sccache",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "ci-release-windows",
      "inherits": "ci-release",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>",
        "CMAKE_MSVC_DEBUG_INFORMATION_FORMAT": "Embedded"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "dev",
      "displayName": "Build (dev)",
      "configurePreset": "dev"
    },
    {
      "name": "ci-release",
      "displayName": "Build (ci-release)",
      "configurePreset": "ci-release"
    },
    {
      "name": "ci-release-windows",
      "displayName": "Build (ci-release-windows)",
      "configurePreset": "ci-release-windows"
    }
  ],

  "testPresets": [
    {
      "name": "ci-release",
      "displayName": "CTest (ci common)",
      "configurePreset": "ci-release",
      "output": {
        "outputOnFailure": true,
        "outputJUnitFile": "ctest-junit.xml"
      },
      "jobs": 2,
      "execution": { "noTestsAction": "error" }
    },
    {
      "name": "ci-release-windows",
      "displayName": "CTest (ci windows)",
      "inherits": "ci",
      "configurePreset": "ci-release-windows"
    }
  ]
}
